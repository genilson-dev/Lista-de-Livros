datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  password    String

  booksCreated Book[]  @relation("UserBooks")

  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("users")
}

model Author {
  id          String   @id @default(uuid())
  name        String
  bio         String?  @db.Text

  books       Book[]

  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("authors")
}

model Book {
  id            String   @id @default(uuid())
  title         String
  content       String?  @db.Text
  published     Boolean  @default(false)

  // üîê Usu√°rio que cadastrou o livro
  createdBy     User     @relation("UserBooks", fields: [createdById], references: [id])
  createdById  String

  // ‚úçÔ∏è Autor que escreveu o livro
  author        Author   @relation(fields: [authorId], references: [id])
  authorId     String

  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  @@map("books")
}
